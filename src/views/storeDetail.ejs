<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head')%>
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Nombre de la tienda :  <%= name %></h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/img/<%= image || 'default-image.png'%>" alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= description %>
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= name %></h2>
                        <span>Costo de envio : $<%= price %></span>
						<ul class="actions-list">
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en local</p>
							</li>
						</ul>

						<a href="#" class="buy-now-button">COMPRAR AHORA</a>
						<hr>
						<form action="/storesCadets/delete/<%= id %>?_method=DELETE" method="POST" style="display: inline-flex">
							<button type="submit" class="action-button delete">ELIMINAR</button>
						</form>
					</article>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>	
</html>